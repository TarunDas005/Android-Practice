<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0ef406"
    tools:context="com.example.bs151.relativelayoutdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Mark zuckerbug"
                    android:background="@drawable/zuck"
                    android:gravity="bottom|center_horizontal" />
            </TableRow>
            <TableRow android:weightSum="3">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="Explorer"
                    android:background="@drawable/explorer"
                    android:gravity="bottom|center_horizontal" />
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="Store"
                    android:background="@drawable/store"
                    android:gravity="bottom|center_horizontal" />
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:id="@+id/explorerTextView"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/weather"
                    android:gravity="bottom|center_horizontal" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/desktop"
                    android:gravity="bottom|center_horizontal" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>
