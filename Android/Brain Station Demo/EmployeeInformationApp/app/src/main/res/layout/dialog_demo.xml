<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bs151.employeeinformationapp.DialogActivity"
    tools:showIn="@layout/activity_dialog">

    <TextView
        android:id="@+id/deleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"/>
    <View
        android:id="@+id/barTextView"
        android:layout_below="@+id/deleteTextView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>
    <TextView
        android:id="@+id/cancelTextView"
        android:layout_below="@+id/barTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"/>
</RelativeLayout>
