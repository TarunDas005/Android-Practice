<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jannat.uicontrolsdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpinnerActivity"
            android:label="@string/title_activity_spinner"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AutoCompleteTextField"
            android:label="@string/title_activity_auto_complete_text_field"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckBoxClass"
            android:label="@string/title_activity_check_box"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RadioGroupClass"
            android:label="@string/title_activity_radio_group_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ToggleButtonActivity"
            android:label="@string/title_activity_toggle_button"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DateTimePicker"
            android:label="@string/title_activity_date_time_picker"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
